{
  "name": "lance-mcp",
  "version": "0.1.0",
  "author": {
    "name": "Alex Komyagin",
    "email": "alex@adiom.io"
  },
  "description": "MCP server for interacting with LanceDB database",
  "license": "MIT",
  "type": "module",
  "bin": {
    "lancedb-mcp": "dist/index.js"
  },
