{
  "name": "concept-rag",
  "version": "1.0.0",
  "author": {
    "name": "Alex Komyagin",
    "email": "alex@adiom.io"
  },
  "description": "Conceptual RAG with LanceDB, WordNet, and multi-signal hybrid search for MCP",
  "license": "MIT",
  "type": "module",
  "bin": {
    "concept-rag": "dist/conceptual_index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "seed": "tsx hybrid_fast_seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "claude",
    "lancedb",
    "anthropic",
    "ai",
    "database"
  ],
  "dependencies": {
    "@lancedb/lancedb": "^0.15.0",
    "@langchain/community": "^0.3.24",
    "@langchain/core": "^0.2.36",
    "@modelcontextprotocol/sdk": "1.1.1",
    "apache-arrow": "^21.0.0",
    "epub": "^1.3.0",
    "ini": "^6.0.0",
    "minimist": "^1.2.8",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.9",
    "dependency-cruiser": "^17.3.1",
    "fast-check": "^4.3.0",
    "madge": "^8.0.0",
    "shx": "^0.3.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.9"
  },
  "overrides": {
    "@langchain/community": {
      "@lancedb/lancedb": "^0.15.0"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/m2ux/concept-rag.git"
  },
  "bugs": {
    "url": "https://github.com/m2ux/concept-rag/issues"
  },
  "homepage": "https://github.com/m2ux/concept-rag"
}
